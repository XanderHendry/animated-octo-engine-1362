<h1><%= @movie.title %></h1>
<p>Creation Year: <%= @movie.creation_year %></p>
<p>Genre: <%= @movie.genre %></p>
<h3>Cast:</h3>
<% @actors.each do |actor| %>
<p><%= actor.name %>  Age: <%= actor.age %></p>
<% end %>
<p>Average Cast Age: <%= @movie.average_actor_age %></p>

<section id="add_actor">
  <%= form_with url: "/movies/#{@movie.id}/actor_movies", method: :patch, local: true do |f| %>
  <%= f.label :actor_id, "Actor ID" %>
  <%= f.text_field :actor_id %>
  <%= f.submit "Submit" %>
  <% end %>
</section>
